---
interface Props {
  showPricing?: boolean;
}

const {
  showPricing = true,
} = Astro.props;

// Keep URLs fixed to avoid prop sprawl
const BOOKING_URL = "https://booking.jenshawgonutrition.com/";
const PRICING_URL = "../pricing/";
---

<div class="vc_row wpb_row vc_row-fluid content-dark data-bg-color-6961884f5d439 vc_custom_1718303311683 row-z-index-6961884f5d439">
  <div class="wpb_column vc_column_container content-dark vc_col-sm-12 column-z-index-6961884f5d4a6">
    <div class="vc_column-inner">
      <div class="wpb_wrapper">
        <div class="vc_row wpb_row vc_inner vc_row-fluid vc_custom_1717621887751 vc_row-has-fill">

          <div class="wpb_column vc_column_container vc_col-sm-1">
            <div class="vc_column-inner">
              <div class="wpb_wrapper"></div>
            </div>
          </div>

          <style is:inline>
            #slcr_icon_text_last6961884f5d763.main__icon {
              display: block;
              text-align: center;
              color: #574142 !important;
              border-radius: 50%;
              border-color: #f9f5f2 !important;
              background: #f9f5f2 !important;
              height: 64px;
              width: 64px;
              line-height: 64px;
              font-size: 32px;
              transition: all ease 0.3s;
              -webkit-transition: all ease 0.3s;
            }
            [data-hover-target="box"]:hover
              #slcr_icon_text_last6961884f5d763.main__icon,
            [data-hover-target="icon"]
              #slcr_icon_text_last6961884f5d763.main__icon:hover {
              background: #f9f5f2 !important;
              border-color: #f9f5f2 !important;
              color: #332324 !important;
            }
          </style>

          <div class="wpb_column vc_column_container vc_col-sm-5">
            <div class="vc_column-inner">
              <div class="wpb_wrapper">
                <div
                  class="icons__text icon-center-mobile"
                  data-hover-target="box"
                  data-icon-align="left"
                  data-reset-responsive="false"
                  data-vertical-align="top"
                >
                  <div class="icons_wrap">
                    <div class="icon__container">
                      <i
                        class="main__icon far fa-calendar-check"
                        id="slcr_icon_text_last6961884f5d763"></i>
                    </div>
                  </div>

                  <div class="text__content">
                    <h4
                      style="font-size: 23px;font-weight: bold;margin-top: 0;margin-bottom: 0px"
                    >
                      Now taking new clients
                    </h4>
                    <p>
                      Get started by booking your free Discovery session today!
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="text-right center-xs wpb_column vc_column_container vc_col-sm-5">
            <div class="vc_column-inner">
              <div class="wpb_wrapper">

                <style is:inline>
                  #btn_slcr_6961884f5d988 {
                    font-size: 14px;
                    text-transform: uppercase;
                  }
                </style>

                <div class="vc_btn3-container vc_btn3-inline">
                  <a
                    class="btn vc_custom_1749514609087 left-xs btn--lg font-800 btn--rounded btn--primary"
                    href={BOOKING_URL}
                    id="btn_slcr_6961884f5d988"
                    target="_blank"
                    title="BOOK NOW"
                  >
                    <span>BOOK NOW</span>
                  </a>
                </div>

                {showPricing && (
                  <>
                    <style is:inline>
                      #btn_slcr_6961884f5da51 {
                        font-size: 14px;
                        text-transform: uppercase;
                      }
                    </style>

                    <div class="vc_btn3-container vc_btn3-inline">
                      <a
                        class="btn vc_custom_1716247633387 left-xs btn--lg font-800 btn--rounded btn--primary btn--ghost"
                        href={PRICING_URL}
                        id="btn_slcr_6961884f5da51"
                        title="Pricing"
                      >
                        <span>CHECK PRICING</span>
                      </a>
                    </div>
                  </>
                )}

              </div>
            </div>
          </div>

          <div class="wpb_column vc_column_container vc_col-sm-1">
            <div class="vc_column-inner">
              <div class="wpb_wrapper"></div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>