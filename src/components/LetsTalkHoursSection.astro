---
interface Props {
  backgroundClass?: string;
  backgroundColor?: string;

  borderTopWidth?: number;     // px
  borderBottomWidth?: number;  // px
  borderStyle?: "solid" | "dashed" | "dotted" | "double" | "none";
  borderColor?: string;
}

const {
  backgroundClass = "content-dark",
  backgroundColor,

  borderTopWidth = 0,
  borderBottomWidth = 0,
  borderStyle = "double",
  borderColor,
} = Astro.props;

// Build inline style safely
const styleParts: string[] = [];

if (backgroundColor) {
  styleParts.push(`background-color: ${backgroundColor}`);
}

const resolvedBorderColor = borderColor ?? "currentColor";

if (borderTopWidth > 0 && borderStyle !== "none") {
  styleParts.push(
    `border-top: ${borderTopWidth}px ${borderStyle} ${resolvedBorderColor}`
  );
}

if (borderBottomWidth > 0 && borderStyle !== "none") {
  styleParts.push(
    `border-bottom: ${borderBottomWidth}px ${borderStyle} ${resolvedBorderColor}`
  );
}

const inlineStyle = styleParts.length ? styleParts.join("; ") : undefined;

const BOOKING_URL = "https://booking.jenshawgonutrition.com/";
const EMAIL_URL = "mailto:info@jenshawgonutrition.com"
